<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home</title>
</head>
<body>
<%- include('./partials/nav') %>


<div class="container">
    <h1 class="my-5">Movies</h1>
    <div class="row">
        <% movies.forEach(movie => { %>
            <div class="col-2 mb-4">
                <div class="card text-bg-dark h-100 border-0">
                    <%if (movie.image){%>
                    <%movie.image.data%>
                    <%}else{%>
                    <img class="card-img-top" src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" alt="movie">
                    <%}%>
                        <div class="card-body">
                        <%= movie.title %>
                        <span class="ms-auto"><%= movie.vote / movie.vote_count %></span>
                    </div>
                    <a class="stretched-link" href="title/<%= movie.id%>"></a>
                </div>
            </div>
        <% }); %>
    </div>
</div>

</body>

<%- include('./partials/footer') %>

</html>