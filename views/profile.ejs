<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home</title>
</head>
<body>
<%- include('./partials/nav') %>

<div class="container">
    <h2><%= user.username %></h2>
    <a class="btn btn-danger" href="/logout">logout</a>
    <p class="text-secondary"> </p>
    <div class="row">
        <div class="col-3">

        </div>
        <div class="col-6">
            <p>Name: <%= user.name %></p>
            <p>Name: <%= user.country %></p>

        </div>
        <div class="col-3">

        </div>
    </div>
    <h1 class="Watch later"></h1>
    <div class="row">
        <% movies.forEach(movie => { %>
            <div class="col-2 mb-4">
                <div class="card text-bg-dark h-100 border-0">
                    <img class="card-img-top" src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" alt="movie">
                    <div class="card-body">
                        <%= movie.original_title %>
                        <span class="ms-auto"><%= movie.vote_average %></span>
                    </div>
                    <a class="stretched-link" href="title/<%= movie.id%>"></a>
                </div>
            </div>
        <% }) %>
    </div>
    hello <%= user.username %>
</div>

</body>

<%- include('./partials/footer') %>

</html>